---
import { Image } from 'astro:assets';

export interface Props {
  src: any; // ImageMetadata from Astro
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
  quality?: number;
  format?: 'webp' | 'avif' | 'png' | 'jpg';
  sizes?: string;
}

const { 
  src, 
  alt, 
  width = 800, 
  height = 600, 
  className = '', 
  loading = 'lazy',
  quality = 80,
  format = 'webp',
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw'
} = Astro.props;

// Validar que src existe
if (!src) {
  throw new Error('OptimizedImage: src prop is required');
}
---

<Image 
  src={src} 
  alt={alt}
  width={width}
  height={height}
  quality={quality}
  class={className}
  format={format}
  sizes={sizes}
  loading={loading}
  decoding="async"
/>








